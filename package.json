{
  "name": "testing-lerna-cz",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "ava": "^1.2.1",
    "commitizen": "^3.0.7",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.3.1",
    "lerna": "^3.13.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run test"
    }
  },
  "scripts": {
    "test": "ava",
    "clean": "rm -rf node_modules && lerna clean --yes",
    "install": "lerna bootstrap && lerna link",
    "commit": "git add . && git-cz",
    "release": "lerna publish --conventional-commits --version=patch --yes"
  }
}
